<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avaloniaRepl="clr-namespace:AvaloniaRepl"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaRepl.Views.DebuggerPanel">
    
    <UserControl.Resources>
        <avaloniaRepl:HtmlTextFormatter x:Key="htmlTextFormatter"/>
    </UserControl.Resources>
    
    <StackPanel>
        <DockPanel x:Name="DebuggerControlButtons">
            <ToggleButton Click="SingleStepButtonPressed">Single Step</ToggleButton>
            <Button Click="ContinueButtonPressed">Continue</Button>
            <Button>Step Over</Button>
        </DockPanel>
        
        <SelectableTextBlock x:Name="MethodInfo"/>
        <StackPanel Orientation="Horizontal">
            <SelectableTextBlock x:Name="StackTrace"/>
            <SelectableTextBlock x:Name="BindingEnvironment"/>
        </StackPanel>
        
        <SelectableTextBlock x:Name="Output"/>
    </StackPanel>
</UserControl>
