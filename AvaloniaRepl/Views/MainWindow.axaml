<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaRepl.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="StepRepl">

    <StackPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Open project..." Click="SelectProjectFolder"/>
                <MenuItem x:Name="OpenRecentDropdown" Header="Open recent">
                    <MenuItem.ItemTemplate>
                        <DataTemplate>
                            <MenuItem Click="OpenRecentProject"/>
                        </DataTemplate>
                    </MenuItem.ItemTemplate>
                </MenuItem>
                <MenuItem Header="Reload project"/>
                <MenuItem Header="Edit project"/>
                <Separator/>
                <MenuItem Header="_Quit" Click="Quit"/>
            </MenuItem>
            
            <MenuItem Header="_Edit">
                <MenuItem Header="Copy"/>
                <MenuItem Header="Paste"/>
            </MenuItem>
        </Menu>
        
        <TextBox Watermark="Run Step commands here..." ></TextBox>
        
        <ScrollViewer></ScrollViewer>
        
    </StackPanel>
    
    
    
</Window>
